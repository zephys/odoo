<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_pos_promotion_type">
            <field name="name">Promotion Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.promotion.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                  Click to add a new POS promotion type
                </p>
            </field>
        </record>

        <record id="pos_promotion_type_form_view" model="ir.ui.view">
            <field name="name">Promotion Type</field>
            <field name="model">pos.promotion.type</field>
            <field name="arch" type="xml">
                <form string="Promotion Type" create="false" edit="false" delete="false">
                    <sheet>
                        <group name="group_general">
                            <field name="name" />
                            <field name="code" />
                            <field name="status" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="pos_promotion_type_tree_view" model="ir.ui.view">
            <field name="name">Promotion Type</field>
            <field name="model">pos.promotion.type</field>
            <field name="field_parent" eval="False"/>
            <field name="arch" type="xml">
                <tree string="Promotion Type" create="false" delete="false">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <menuitem name="Promotion Type" id="menu_pos_promotion_type" parent="menu_pos_promotion" action="action_pos_promotion_type" sequence="10"/>
    </data>
</odoo>