<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_template" inherit_id="point_of_sale.template">
    <t t-extend="Orderline">
        <t t-jquery=".info-list" t-operation="after">
            <t t-if="line.pos_promotion_message">
                <span class="pos_promotion_message">
                    [POS Promotion] <t t-esc="line.pos_promotion_message"/>
                </span>
            </t>
        </t>
    </t>

    <t t-extend="PosTicket">
        <tr t-jquery="tr[t-foreach*='orderlines'][t-as*='orderline']" t-operation="append">
            <t t-if="orderline.pos_promotion_message">
                <tr>
                    <td colspan="2">
                        <span class="pos_promotion_message">
                            [POS Promotion] <t t-esc="orderline.pos_promotion_message"/>
                        </span>
                    </td>
                </tr>
            </t>
        </tr>
    </t>
</templates>